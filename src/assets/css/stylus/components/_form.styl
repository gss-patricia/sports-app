.form
  padding 40px
  &-container
    padding 20px 40px 0 40px
    display flex
    flex-direction row
    @media $small-only
      flex-direction column

  &-item
    margin-bottom 24px

  &-left
    width 50%
    margin-right  10%

  &-right
    width 50%

.checkbox-area, .radio-area
  display flex
  flex-direction row
  align-items center
  align-content center
  max-width 100%

.checkbox-container
  margin 20px 0 20px 0