.layout
  width 100%
  height 100%
  display -webkit-flex
  display -ms-flexbox
  display flex
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  overflow-y auto
  overflow-x hidden
  position relative
  -webkit-overflow-scrolling touch

  &__header
    background-color #fff
    display flex
    flex-direction column
    flex-wrap nowrap
    justify-content flex-start
    flex-shrink 0
    width 100%
    z-index 3
    box-shadow 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12)
    transition-duration .2s
    transition-timing-function cubic-bezier(.4,0,.2,1)
    min-height 80px
    max-height 1000px
    padding 0
    margin 0
    box-sizing border-box

    &-logo
      background-color $mountain-meadow
      width 36px
      height 36px
      border-radius 5px
      display flex
      align-items center
      align-content center

      i
        color #fff
        font-size 25px
        margin 0 auto

    &-logotipo
      margin-left 15px
      font-size 17px
      font-weight 800

    &-row
      display flex
      flex-direction row
      flex-wrap nowrap
      flex-shrink 0
      box-sizing border-box
      align-self stretch
      align-items center
      height 80px
      margin 0
      padding 0 40px 0 40px

  &__content
    position relative
    display inline-block
    overflow-y auto
    overflow-x hidden
    flex-grow 1
    z-index 1