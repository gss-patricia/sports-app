.information
  display flex
  max-width 100%
  flex-direction row
  align-items center
  justify-content center
  padding 0 40px 0 40px

  &__label
    color $mountain-meadow
    font-size 16px
    margin-bottom 15px

  &__item
    padding 0 15px 0 0

  &__icon
    display flex
    width 40%

    i
      font-size 50px
      color $mountain-meadow

  &__inner
    display flex
    justify-content center
    flex-direction row