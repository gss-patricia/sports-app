.painel-info
  width 100%
  display flex
  flex-direction row
  align-content center
  align-items center
  justify-content flex-start
  height 75px
  background-color $opal

  &__item
    display flex
    width 20%

  &__labels
    display flex
    justify-content center
    flex-direction column

  &__icon
    display flex
    justify-content center
    flex-direction row
    width 28%

    i
      font-size 50px
      color $mountain-meadow

  &__label
    color #999999

    &--big
      font-size 20px
      font-weight 800
